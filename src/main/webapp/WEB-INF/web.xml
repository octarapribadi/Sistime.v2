<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Sistem Informasi STMIK TIME</display-name>

    <context-param>
        <param-name>primefaces.PUBLIC_CAPTCHA_KEY</param-name>
        <param-value>${sistime.public_captcha_key}</param-value>
    </context-param>

    <context-param>
        <param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
        <param-value>${sistime.private_captcha_key}</param-value>
    </context-param>

    <context-param>
        <param-name>sistime.userdir</param-name>
        <param-value>${sistime.userdir}</param-value>
    </context-param>

    <context-param>
        <param-name>sistime.pamdir</param-name>
        <param-value>pamdir</param-value>
    </context-param>

    <context-param>
        <param-name>sistime.size_limit</param-name>
        <param-value>3145728</param-value>
    </context-param>


    <context-param>
        <param-name>resteasy.role.based.security</param-name>
        <param-value>true</param-value>
    </context-param>

</web-app>