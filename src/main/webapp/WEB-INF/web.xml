    <security-constraint>
        <display-name>Halaman admin</display-name>
        <web-resource-collection>
            <web-resource-name>Protected page</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>administrator</role-name>
            <role-name>marketing</role-name>
            <role-name>keuangan</role-name>
            <role-name>prodi</role-name>
        </auth-constraint>
    </security-constraint>
