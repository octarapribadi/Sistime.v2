        <param-value>${sistime.public_captcha_key}</param-value>
    </context-param>

    <context-param>
        <param-name>primefaces.PRIVATE_CAPTCHA_KEY</param-name>
        <param-value>${sistime.private_captcha_key}</param-value>
    </context-param>

    <context-param>
        <param-name>sistime.userdir</param-name>
        <param-value>${sistime.userdir}</param-value>
    </context-param>

    <context-param>
        <param-name>sistime.pamdir</param-name>
        <param-value>pamdir</param-value>
    </context-param>
    
    <context-param>
        <param-name>sistime.size_limit</param-name>
        <param-value>3145728</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>

