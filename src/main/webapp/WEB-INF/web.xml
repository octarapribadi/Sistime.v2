    <security-role>
        <role-name>administrator</role-name>
    </security-role>
    <security-role>
        <role-name>mahasiswa</role-name>
    </security-role>
    <security-role>
        <role-name>marketing</role-name>
    </security-role>
    <security-role>
        <role-name>keuangan</role-name>
    </security-role>
    <security-role>
        <role-name>prodi</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <!--<realm-name>SistimeDBSecurityDomain</realm-name>-->
        <form-login-config>
            <form-login-page>/index.xhtml</form-login-page>
            <form-error-page>/error/error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <error-page>
        <location>/error/error.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/error/error403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/error404.xhtml</location>
    </error-page>

</web-app>